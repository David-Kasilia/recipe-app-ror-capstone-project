<div class="container my-5">
    <h1 class="text-center">Shopping List </h1>
    <div class="d-flex justify-content-between mb-3">
        <h3 class="text-center">Total: <%= "$#{ @total }" %></h3>
        <div class="d-flex justify-content-end">
        </div>
    </div>
    
    <table class="table table-sm table-striped table-bordered border-dark ">
      <tr>
        <th> Food Item </th>
        <th> Quantity </th>
        <th> Price </th>
        <th> Total </th>
      </tr>
      <% @foods.each do |food_item| %>
          <tr>
            <td><%= food_item.foods.name %></td>
            <td><%= food_item.quantity %></td>
            <td><%= "$#{ food_item.foods.price }" %></td>
            <td><%= "$#{ food_item.foods.price * food_item.quantity }" %></td>
          </tr>
        <% end %>
    </table>
    </div>